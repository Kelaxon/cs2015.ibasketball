<?xml version="1.0" encoding="GBK"?>
<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN"
	"http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>
	<field name="stuPassword">
		<field-validator type="regex">
			<param name="expression"><![CDATA[(^\d{4,}$)]]></param>
			<message>密码必须大于4位</message>
		</field-validator>
	</field>


	<field name="stuTel">
		<field-validator type="regex">
			<param name="expression"><![CDATA[(1[34578][012356789]\d{8}|134[012345678]\d{7})]]></param>
			<message>请输入有效的手机号码</message>
		</field-validator>
	</field>
	
	
	<field name="stuEmail">
		<field-validator type="email">
			<message>请输入有效的邮箱</message>
		</field-validator>
	</field>
</validators>
